// Wrapper para cerrar men√∫ en m√≥vil
const aplicarFiltrosWrapper = aplicarFiltros;
window.aplicarFiltrosConCierre = async function() {
    await aplicarFiltrosWrapper();
    
    if (window.innerWidth <= 768) {
        setTimeout(() => {
            document.getElementById('filtros-panel')?.classList.remove('active');
            document.getElementById('menu-overlay')?.classList.remove('active');
            const infoPanel = document.getElementById('info-panel-derecha');
            if (infoPanel) infoPanel.style.display = 'block';
        }, 300);
    }
};

