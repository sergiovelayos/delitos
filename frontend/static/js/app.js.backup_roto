// Funci√≥n global para toggle
window.toggleLegend = function() {
    const content = document.getElementById('legend-content');
    const toggle = document.querySelector('.legend-toggle');
    
    if (content && toggle) {
        content.classList.toggle('collapsed');
        toggle.classList.toggle('collapsed');
    }
};

// Inicializar leyenda colapsada en m√≥vil
function initLegendMobile() {
    if (window.innerWidth <= 768) {
        const content = document.getElementById('legend-content');
        const toggle = document.querySelector('.legend-toggle');
        
        if (content && toggle) {
            content.classList.add('collapsed');
            toggle.classList.add('collapsed');
        }
    }
}

// ==============================================
// INICIALIZACI√ìN DE FUNCIONALIDADES M√ìVIL
// ==============================================

document.addEventListener('DOMContentLoaded', function() {
    // Men√∫ hamburguesa
    const menuToggle = document.getElementById('menu-toggle');
    const menuOverlay = document.getElementById('menu-overlay');
    const filtrosPanel = document.getElementById('filtros-panel');
    const infoPanel = document.getElementById('info-panel-derecha');
    
    if (menuToggle && menuOverlay && filtrosPanel) {
        menuToggle.addEventListener('click', function() {
            filtrosPanel.classList.toggle('active');
            menuOverlay.classList.toggle('active');
            
            if (infoPanel && window.innerWidth <= 768) {
                infoPanel.style.display = filtrosPanel.classList.contains('active') ? 'none' : 'block';
            }
        });
        
        menuOverlay.addEventListener('click', function() {
            filtrosPanel.classList.remove('active');
            menuOverlay.classList.remove('active');
            
            if (infoPanel && window.innerWidth <= 768) {
                infoPanel.style.display = 'block';
            }
        });
    }
    
    // Inicializar leyenda colapsada en m√≥vil
    setTimeout(function() {
        if (window.innerWidth <= 768) {
            const content = document.getElementById('legend-content');
            const toggle = document.querySelector('.legend-toggle');
            
            if (content && toggle) {
                content.classList.add('collapsed');
                toggle.classList.add('collapsed');
            }
        }
    }, 200);
});
